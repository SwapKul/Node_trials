extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet" href="/css/forms.css")

block content
    main
        .main-box
            form(action="/user-info" class="contact-us" method="POST")
                label(for="name") Name: 
                input(type="text" name="name" id="name" placeholder="Click here to start typing.")
                label(for="email") E-mail ID: 
                input(type="text" name="email" id="email" placeholder="Click here to start typing.")
                label(for="number") Contact No: 
                input(type="text" name="number" id="number" placeholder="Click here to start typing.")
                label(for="uid") Enter your UserID: 
                input(type="text" name="uid" id="uid" placeholder="Click here to start typing.")
                button(type="submit") Submit